CC = gcc
CFLAGS = -Itests/unity
UNITY_SRC = tests/unity/unity.c
TEST_SRC = tests/test_doctor_manager.c tests/test_scheduler.c tests/test_runner.c
OBJ = $(UNITY_SRC:.c=.o) $(TEST_SRC:.c=.o)

all: test

test: $(OBJ)
	$(CC) -o test $(OBJ)

$(UNITY_SRC:.c=.o): tests/unity/unity.h tests/unity/unity_internals.h

clean:
	rm -f *.o test